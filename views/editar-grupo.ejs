<main class="contenedor contenedor-formularios no-padding">
    <h1><%= nombrePagina %></h1>
    <form class="default-form" method="POST" >
        <div class="campo">
            <label >Nombre</label>
            <input type="text" name="nombre" value="<%= grupo.nombre %>" placeholder="Nombre grupo">
        </div>

        <div class="campo descripcion">
            <label for="">Descripcion</label>
            <div class="contenedor-editor">
                <textarea name="descripcion" cols="30" rows="5"><%= grupo.descripcion %></textarea>
            </div>
        </div>

        <div class="campo">
            <label for="">Categoria</label>
            <select name="categoria" >
                <option value="" selected disabled>-- Elige una Categoria --</option>
                <% categorias.forEach(categoria => { %>
                <option 
                 value="<%= categoria.id %>"
                 <%= (grupo.categoriaId === categoria.id ? 'selected' : '') %>
                 ><%= categoria.nombre %></option>
                <% }) %>
            </select>
        </div>
        
        <div class="campo">
            <label >Sitio Web</label>
            <input type="url" name="url" placeholder="Sitio Web" value="<%= grupo.url %>">
        </div>

        <div class="campo enviar">
            <input type="submit" value="Editar Grupo" class="btn btn-rosa">
        </div>
    </form>
</main>
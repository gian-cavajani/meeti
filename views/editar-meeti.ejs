<main class="contenedor contenedor-formularios">
  <h1><%- nombrePagina %></h1>
  <form class="default-form"  method="POST">
    <legend>Sobre el Meeti</legend>
    <div class="campo">
      <label>Grupo</label>
      <select name="grupoId">
        <option value="" disabled selected>-- Selecciona Grupo --</option>
        <% if(grupos.length > 0 ) { %> <% grupos.forEach(grupo => {  %>
        <option <%= (grupo.id===meeti.grupoId)? 'selected':'' %> value="<%= grupo.id %>"> <%= grupo.nombre %></option>
        <% }) %> <% } %>
      </select>
    </div>
    <div class="campo">
      <label>Titulo</label>
      <input type="text" name="titulo" value="<%= meeti.titulo %>"/>
    </div>
    <div class="campo">
      <label>Invitado</label>
      <input
        type="text"
        name="invitado"
        value="<%= meeti.invitado %>"
      />
    </div>
    <div class="columnas-2 grid">
      <div class="campo">
        <label>Fecha</label>
        <input type="date" name="fecha" value="<%= meeti.fecha %>" />
      </div>
      <div class="campo">
        <label>Hora</label>
        <input type="time" name="hora" value="<%= meeti.hora %>" />
      </div>
    </div>
    <div class="campo">
      <label>Cupo</label>
      <input
        type="number"
        
        name="cupo"
        value="<%= meeti.cupo %>"
      />
    </div>
    <div class="campo descripcion">
      <label for="">Descripcion</label>
      <div class="contenedor-editor">
        <textarea name="descripcion" cols="30" rows="5"><%= meeti.descripcion %></textarea>
      </div>
    </div>

    <legend>Ubicación Meeti</legend>

    <div class="campo buscador">
      <label>Coloca la Dirección del Meeti</label>
      <div class="contenedor-input">
        <input type="text" id="formbuscador" placeholder="Ubicación" />
        <small>El asistente colocará una dirección estimada</small>
      </div>
    </div>

    <div class="campo mapa">
      <div id="mapa"></div>
      <p class="informacion">
        Mueve el Pin hacia el punto exacto en caso de ser necesario
      </p>
    </div>

    <p class="informacion">
      Confirma que los siguientes campos sean correctos:
    </p>
    <div class="campo">
      <label>Dirección</label>
      <input
        type="text"
        id="direccion"
        name="direccion"
        value="<%= meeti.direccion %>"
      />
    </div>

    <div class="campo">
      <label>Latitud</label>
      <input
        read-only="read-only"
        type="text"
        id="lat"
        name="lat"
        value="<%= meeti.ubicacion.coordinates[1] %>"
      />
    </div>
    <div class="campo">
      <label>Longitud</label>
      <input
        read-only="read-only"
        type="text"
        id="lng"
        name="lng"
        value="<%= meeti.ubicacion.coordinates[0] %>"
      />
    </div>
    <!-- <input type="hidden" id="lat" name="lat" />
    <input type="hidden" id="lng" name="lng" /> -->
    <div class="campo enviar">
      <input type="submit" class="btn btn-rosa" value="Editar Meeti" />
    </div>
  </form>
</main>
